// layout
// marking the language
doctype html
html(lang='en')
  head
    // charset attribute, specifies the character encoding for the HTML document
    meta(charset='utf-8')
    // viewport = users visible area of a web page
    meta(name='viewport', content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    // title of the webpage
    title= title
    // bootstrap stylesheet link (before all other links)
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    // jsnlog
    script(src='/javascripts/libraries/jsnlog.min.js')
    // mapbox
    script(src='https://api.mapbox.com/mapbox.js/v3.1.1/mapbox.js')
    link(href='https://api.mapbox.com/mapbox.js/v3.1.1/mapbox.css' rel='stylesheet')
    // leaflet, leaflet roting machine
    link(rel='stylesheet' href='https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.css')
    script(src='https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js')
    // Geocoder
    link(rel='stylesheet' href='https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.css')
    script(src='https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js')
    // Leaflet knn
    script(src='javascripts/libraries/leaflet-knn.min.js')
    // jQuery library
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')
    // jQuery
    script(src='/javascripts/libraries/jquery.js')
    script(src='/javascripts/libraries/jquery-ui.js')
    script(src='/javascripts/libraries/jquery-ui.min.js')
    link(href='/stylesheets/libraries/jquery-ui.min.css', rel='stylesheet')
    // jQuery easyAutocomplete
    script(src='/javascripts/libraries/jquery.easy-autocomplete.min.js')
    link(href='/stylesheets/libraries/easy-autocomplete.min.css', rel='stylesheet')
    link(href='/stylesheets/libraries/easy-autocomplete.themes.min.css', rel='stylesheet')
    // link to tylesheet
    link(href='/stylesheets/style.css', rel='stylesheet')
    // leaflet draw
    link(href='https://api.mapbox.com/mapbox.js/plugins/leaflet-draw/v0.4.10/leaflet.draw.css' rel='stylesheet')
    script(src='https://api.mapbox.com/mapbox.js/plugins/leaflet-draw/v0.4.10/leaflet.draw.js')
