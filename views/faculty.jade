// add faculties to the database or edit them
extends layout

block content
  // jumbotron
  .jumbotron.jumbotron-fluid
    .container
      h1 Faculties
      p.
        Add a new faculty or edit an existing one!
  .container-fluid
    .row
      .col-lg-6
          h4 Insert a new faculty!
          br
          // form input fields and button for saving a new faculty
          form
            input#name.form-control(type='text', name='name', placeholder='name')
            br
            input#shortcut.form-control(type='text', name='shortcut', placeholder='shortcut')
            br
            input#website.form-control(type='url', name='website', placeholder='website/url')
            br
            input#institutes.form-control(type='text', name='institutes', placeholder='institutes')
          br
          button.btn.btn-outline-success.btn-sm(onclick='saveFaculty()') Save in the database!
      .col-lg-6
        h4 Search for a faculty with name or shortcut and changes its data!
        br
        // jquery autocomplete search bar to search for a faculty with name or shortcut
        .ui-widget
          input#searchfaculty.form-control(type='text', placeholder='Search...')
        br
        // form input fields and button for changing or deleting the data of a faculty
        // fields are automatically filled by using the jquery autocomplete search bar
        p.
          Dataset of the desired faculty:
        form
          input#idup.form-control(type='text', name='id', readonly, placeholder='id')
          br
          input#nameup.form-control(type='text', name='name', placeholder='name')
          br
          input#shortcutup.form-control(type='text', name='shortcut', placeholder='shortcut')
          br
          input#websiteup.form-control(type='url', name='website', placeholder='website/url')
          br
          input#institutesup.form-control(type='text', name='institutes', placeholder='institutes')
        br
        button.btn.btn-outline-success.btn-sm(onclick='updateFaculty()') Update dataset!
        | &nbsp;
        | &nbsp;
        button.btn.btn-outline-danger.btn-sm(onclick='deleteFaculty()') Delete dataset!
    // connection to script
    script(src='/javascripts/faculty.js')
