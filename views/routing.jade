// routing: navigation, adress input, nearest canteen
extends layout

block content
  // jumbotron
  .jumbotron.jumbotron-fluid
    .container
      h1 Routing
      p.
        Enter addresses or navigate from an institute to a cafeteria!
  // bootstrap container with columns (grid)
  .container-fluid
    .row
      .col-lg-9
        div
          #map.map4
      .col-lg-3
        h4 Save your created route in the Database!
        br
        button#btn1.btn.btn-outline-success.btn-sm(onclick='insertRoute()') Save in Database!
        br
        br
        br
        h4 Search for routes (with name, startpoint or endpoint) you have already saved to add them to the map and maybe change their data or delete them!
        br
        // jquery autocomplete search bar to search for a route with name, startpoint or endpoint 
        .ui-widget
          input#routename.form-control(type='text', placeholder='Search for name...', oninput='disableInputs()')
          | or
          input#routestart.form-control(type='text', placeholder='Search for startpoint...', oninput='disableInputs()')
          | or
          input#routeend.form-control(type='text', placeholder='Search for endpoint...', oninput='disableInputs()')
        br
        button#btn2.btn.btn-outline-success.btn-sm(onclick='updateRoute()', disabled) Update!
        | &nbsp;
        | &nbsp;
        button#btn3.btn.btn-outline-danger.btn-sm(onclick='deleteRoute()', disabled) Delete!
          
  // connection to script        
  script(src='/javascripts/routing.js')
      
